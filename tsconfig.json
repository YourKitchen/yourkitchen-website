{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "#assets/*": ["./src/assets/*"],
      "#components/*": ["./src/components/*"],
      "#pages/*": ["./pages/*"],
      "#models/*": ["./src/models/*"],
      "#contexts/*": ["./src/contexts/*"],
      "#network/*": ["./src/network/*"],
      "#utils/*": ["./src/utils/*"],
      "#misc/*": ["./src/misc/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "scripts/translate-site.mts"
  ],
  "exclude": ["node_modules"]
}
