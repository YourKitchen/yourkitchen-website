{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "server",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "strict": true,

    "skipLibCheck": true,
    "noImplicitAny": false,

    "incremental": true,

    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "useUnknownInCatchVariables": false,
    "target": "esnext",

    "composite": true
  },
  "exclude": ["node_modules", "dist"]
}
